<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.paradicedev.dailyst.AddTaskActivity"
    android:background="@drawable/backrepeat">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/round_corners"
        android:backgroundTint="@android:color/white"
        android:alpha="0.3"/>

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin">

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/task_title_editText"
    android:inputType="textCapSentences|textMultiLine"
    android:hint="Task title..." />

<EditText
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:inputType="textCapSentences|textMultiLine"
    android:gravity="top"
    android:ems="10"
    android:layout_marginTop="15dp"
    android:id="@+id/task_details_editText"
    android:layout_below="@id/task_title_editText"
    android:hint="Task details..." />

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/save_button"
    android:text="Save"
    android:layout_alignParentBottom="true"
    android:onClick="saveNewTask"/>

<TextView
    android:id="@+id/deadline_label_textview"
    android:layout_width="80dp"
    android:layout_height="40dp"
    android:layout_below="@id/task_details_editText"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical"
    android:text="Deadline:"
    />

<TextView
    android:id="@+id/deadline_textview"
    android:layout_width="400dp"
    android:layout_height="40dp"
    android:layout_below="@id/task_details_editText"
    android:layout_toRightOf="@+id/deadline_label_textview"
    android:layout_marginRight="100dp"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical"
    android:textSize="8pt"
    />

<Button
    android:id="@+id/set_deadline_task_button"
    android:layout_width="100dp"
    android:layout_height="40dp"
    android:layout_alignParentRight="true"
    android:layout_below="@id/task_details_editText"
    android:layout_marginTop="10dp"
    android:text="Set Deadline"
    android:textSize="5pt" />

</RelativeLayout>
    </RelativeLayout>
